<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CincoMascotas">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="409dp"
        android:layout_height="354dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />



    <androidx.cardview.widget.CardView
        android:id="@+id/cvMascota"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="104dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgHuesoDorado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/HuesoDorado"/>

    <ImageView
        android:id="@+id/imgHuesoBlanco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/HuesoBlanco"
        />

    <ImageView
        android:id="@+id/imgAtras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/abc_vector_test"
        />

    <ImageView
        android:id="@+id/imgHuella"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/Huella"
        />

</androidx.constraintlayout.widget.ConstraintLayout>